byte idx0=0;
byte idx1=0;
byte idx2=0;
byte idx3=0;

byte s0=0;
byte s1=0;
byte s2=0;
byte s3=0;

void loop() {
  if (Serial.available()) {
    byte d = Serial.read();
    if(d<128)
    {
      if(d&(1<<4))
      {
        data[d>>5] &= 0x0F;
        data[d>>5] |= d<<4;
      }
      else
      {
        data[d>>5] &= 0xF0;
        data[d>>5] |= (d&0xF);
      }
    }
  }
  if(drA0!=s0)
  {
    s0=drA0;
    idx0++;
  }
  if(drA1!=s1)
  {
    s1=drA1;
    idx1++;
  }
  if(drA2!=s2)
  {
    s2=drA2;
    idx2++;
  }
  if(drA3!=s3)
  {
    s3=drA3;
    idx3++;
  }
  
  if(pgm_read_byte_near(PowerData + idx0)>data[0])
  {
	dwP10H;
  }
  else
  {
	dwP10L;
  }
  
  if(pgm_read_byte_near(PowerData + idx1)>data[1])
  {
	dwP11H;
  }
  else
  {
	dwP11L;
  }
  
  if(pgm_read_byte_near(PowerData + idx2)>data[2])
  {
	dwP12H;
  }
  else
  {
	dwP12L;
  }
  
  if(pgm_read_byte_near(PowerData + idx3)>data[3])
  {
	dwP13H;
  }
  else
  {
	dwP13L;
  }
  
}



